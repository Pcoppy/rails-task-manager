<h1>All tasks</h1>

<ol><% @index.each do |task| %>
      <li><%= link_to task.title, task_path(task) %> <%= link_to "   - Delete task",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>  </li>
    <% end %>
</ol>

<h2> <%= link_to "Create a new task", new_task_path() %></h2>
